{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run invoke lint"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(uv run invoke lint:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run invoke test:*)",
      "Edit(pytest_resource_path/**)",
      "Edit(tests/**)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(rm:*)"
    ]
  }
}